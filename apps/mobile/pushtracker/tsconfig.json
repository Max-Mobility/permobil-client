{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, // for lodash
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "diagnostics": false,
    "listEmittedFiles": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es2018", "es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@permobil/*": ["../../../@permobil/*"],
      "@permobil/angular": ["../../../@permobil/angular"],
      "@permobil/core/*": ["../../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../../@permobil/nativescript/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "include": [
    "./src/main.ts",
    "./references.d.ts",
    "./src/app/**/*.module.ts",
    "../../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/src/**/*.ts",
    "../../../@permobil/nativescript/src/**/*.ts",
    "../../../forked-plugins/nativescript-bluetooth/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "../../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/demo/**/*.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
