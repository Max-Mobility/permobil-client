{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es2018", "es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@permobil/*": ["../../../@permobil/*"],
      "@permobil/angular": ["../../../@permobil/angular"],
      "@permobil/core/*": ["../../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../../@permobil/nativescript/*"],
      "*": ["./node_modules/*"]
    },
    "allowSyntheticDefaultImports": true // for lodash
  },
  "include": ["src/tests/**/*.ts", "src/**/*.ios.ts", "src/**/*.android.ts"],
  "files": ["./references.d.ts", "./src/main.ts"],
  "exclude": [
    "node_modules",
    "platforms",
    "../../../@permobil/nativescript/src/plugins/**/*.ts"
  ]
}
