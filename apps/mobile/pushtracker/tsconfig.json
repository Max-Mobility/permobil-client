{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@permobil/*": ["../../../@permobil/*"],
      "@permobil/angular": ["../../../@permobil/angular"],
      "@permobil/core/*": ["../../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../../@permobil/nativescript/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "files": [
    "./node_modules/tns-platform-declarations/android/android-platform-23.d.ts",
    "./node_modules/tns-platform-declarations/android/android-support-28.d.ts",
    "./node_modules/tns-platform-declarations/android/common.d.ts",
    "./node_modules/tns-platform-declarations/ios.d.ts",
    "../../../forked-plugins/nativescript-bluetooth/index.ts",
    // "./src/app.module.ngfactory.d.ts",
    "./src/main.ts"
  ],
  "include": ["./src/**/*.module.ts"],
  "exclude": ["node_modules", "platforms"]
}
