{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "diagnostics": false,
    "listEmittedFiles": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@permobil/*": ["../../../@permobil/*"],
      "@permobil/angular": ["../../../@permobil/angular"],
      "@permobil/core/*": ["../../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../../@permobil/nativescript/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "files": ["./src/main.ts"],
  "include": [
    "./src/app/**/*.module.ts",
    "../../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/src/**/*.ts",
    "../../../@permobil/nativescript/src/**/*.ts",
    "../../../forked-plugins/nativescript-bluetooth/**/*.ts",
    "../../../forked-plugins/nativescript-animated-circle/*.ts",
    "../../../forked-plugins/nativescript-perms/src/*.ts",
    "../../../forked-plugins/nativescript-sentry/*.ts"
  ],
  "exclude": ["node_modules", "platforms"],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true // disabling for now to use TS 3.7.3 which should be fine with Angular and available in Q1 with NG9 release
  }
}
