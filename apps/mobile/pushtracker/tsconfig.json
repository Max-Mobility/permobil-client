{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "diagnostics": false,
    "listEmittedFiles": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@permobil/*": ["../../../@permobil/*"],
      "@permobil/angular": ["../../../@permobil/angular"],
      "@permobil/core/*": ["../../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../../@permobil/nativescript/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "files": ["./src/main.ts"],
  "include": ["./src/app/**/*.module.ts"],
  "exclude": ["node_modules", "platforms", "../../../@permobil/nativescript/src/plugins/*"]
}
