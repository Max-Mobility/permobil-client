<Page xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:wol="nativescript-wear-os/packages/wear-os-layout"
    xmlns:sdl="nativescript-wear-os/packages/swipe-dismiss-layout"
    shownModally="onShownModally"
    actionBarHidden="true">
    <GridLayout rows="auto, auto" columns="*" backgroundColor="#000" width="100%" height="100%" verticalAlignment="center">
        <ActivityIndicator row="0" busy="true" color="#006ea4" width="50%" height="50%" verticalAlignment="center" horizontalAlignment="center" />
        <Label row="1" class="center-label-base fs20" text="{{ scanningText }}" textWrap="true" verticalAlignment="center" horizontalAlignment="center" />
    </GridLayout>
</Page>