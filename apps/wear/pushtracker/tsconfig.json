{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@permobil/*": ["../../permobil/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "include": [
    "../../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/src/**/*.ts",
    "../../../forked-plugins/nativescript-bluetooth/**/*.ts",
    "../../../forked-plugins/nativescript-animated-circle/*.ts",
    "../../../forked-plugins/nativescript-sentry/*.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "nativescript-bluetooth",
    "tools",
    "hooks"
  ]
}
