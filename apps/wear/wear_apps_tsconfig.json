{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "noImplicitUseStrict": true,
    "lib": ["es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "@permobil/*": ["../../@permobil/*"],
      "@permobil/core/*": ["../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../@permobil/nativescript/*"],
      "@nativescript/core": [
        "../../../forked-plugins/nativescript-core-7.0.0/*"
      ],
      "nativescript-bluetooth": [
        "../../forked-plugins/nativescript-bluetooth/*"
      ]
    },
    "plugins": [
      {
        "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
        "type": "raw"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "platforms",
    "../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/demo/**/*.ts"
  ]
}
