{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "diagnostics": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitUseStrict": true,
    "declaration": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "@permobil/*": ["../../@permobil/*"],
      "@permobil/core/*": ["../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../@permobil/nativescript/*"],
      "nativescript-bluetooth": ["../../forked-plugins/nativescript-bluetooth/*"]
    }
  },
  "exclude": [
    "node_modules",
    "platforms",
    "../../@permobil/nativescript/src/plugins/nativescript-wear-os-comms/demo/**/*.ts"
  ]
}
