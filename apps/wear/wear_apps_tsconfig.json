{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "noImplicitUseStrict": true,
    "lib": ["es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "@permobil/*": ["../../@permobil/*"],
      "@permobil/core/*": ["../../@permobil/core/*"],
      "@permobil/nativescript/*": ["../../@permobil/nativescript/*"]
    }
  },
  "exclude": [
    "node_modules",
    "platforms",
    "../../@permobil/nativescript/src/plugins/**/*.ts"
  ]
}
